<!doctype html>
<html lang="en">
    <head>
        <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <title>Redi2Medi</title>
        <style type="text/css">
            html,
body {
  height: 100%;
}

body {
  
  align-items: center;
  padding-top: 40px;
  padding-bottom: 40px;
  background-color: #141313;
  color: rgb(26, 110, 47);
}

/* form for sign in */
 .form-signin {
  width: 100%;
  max-width: 330px;
  padding: 15px;
  margin: auto;
}

.form-signin .checkbox {
  font-weight: 350;
}

.form-signin .form-floating:focus-within {
  z-index: 2;
}

.form-signin input[ type= " " ] {
  margin-bottom: -1px;
  border-bottom-right-radius: 0;
  border-bottom-left-radius: 0;
}

.form-signin input[ type="password" ] {
  margin-bottom: 10px;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
}

.bd-placeholder-img {
  font-size: 1.125rem;
  text-anchor: middle;
  -webkit-user-select: none;
  -moz-user-select: none;
  user-select: none;
}

.btn {
    margin: 2px;
}

@media (min-width: 768px) {
  .bd-placeholder-img-lg {
    font-size: 3.5rem;
  }
}
        </style>
    </head>
    <body class="form-signin text-center">
      <nav>
    <!-- If the user is logged in, show a logout button -->
    {{#if loggedIn}}
    <button id="logout" class="btn-no-style">Logout</button>
    {{else}}
    <!-- Otherwise, show a link to login -->
    <a href="/login">Login</a>
    {{/if}}
  </nav>  
        
        {{{body}}}

         
    </body>
</html>